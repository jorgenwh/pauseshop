{
    "manifest_version": 3,
    "name": "PauseShop",
    "version": "0.0.0",
    "description": "Discover products from paused videos and find them on Amazon",
    "icons": {
        "16": "icons/icon-128.png",
        "32": "icons/icon-128.png",
        "64": "icons/icon-128.png",
        "128": "icons/icon-128.png"
    },
    "permissions": ["activeTab", "storage", "scripting", "tabs", "tabCapture"],
    "host_permissions": [
        "https://*.netflix.com/*",
        "https://*.hulu.com/*",
        "https://*.amazon.com/*",
        "https://*.primevideo.com/*",
        "https://*.disneyplus.com/*",
        "https://*.hbomax.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.netflix.com/*",
                "https://*.hulu.com/*",
                "https://*.youtube.com/*",
                "https://*.primevideo.com/*",
                "https://*.disneyplus.com/*",
                "https://*.hbomax.com/*"
            ],
            "js": ["content/main-content.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "ui/*",
                "content/main-content.css",
                "icons/icon-128.png",
                "icons/products/*.png",
                "fonts/*.ttf"
            ],
            "matches": [
                "https://*.netflix.com/*",
                "https://*.hulu.com/*",
                "https://*.youtube.com/*",
                "https://*.primevideo.com/*",
                "https://*.disneyplus.com/*",
                "https://*.hbomax.com/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "PauseShop"
    }
}
